{
    "name": "moonstone",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.4.2",
        "@material/theme": "^3.1.0",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-scripts": "3.1.1",
        "typeface-roboto": "^0.0.75"
    },
    "scripts": {
        "start": "start-storybook -p 6006",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "build-storybook": "build-storybook",
        "build:css": "node-sass-chokidar src/styles/moonstone.scss -o build/ --output-style compressed",
        "prettier": "prettier --only-changed --write '**/*.{jsx,js,scss}' --loglevel error",
        "lint": "yarn prettier && yarn lint:js && yarn lint:scss",
        "lint:js": "eslint --ext js,jsx,json --fix .",
        "lint:scss": "stylelint './src/**/*.scss' --fix"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@jahia/eslint-config": "^1.0.0-beta.20190819140611",
        "@storybook/addon-a11y": "^5.2.1",
        "@storybook/addon-actions": "^5.2.1",
        "@storybook/addon-knobs": "^5.2.1",
        "@storybook/addons": "^5.2.1",
        "@storybook/react": "^5.2.1",
        "babel-loader": "^8.0.6",
        "eslint": "^6.2.2",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-jest": "^22.16.0",
        "eslint-plugin-json": "^1.4.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "husky": "^3.0.5",
        "node-sass-chokidar": "^1.3.5",
        "prettier": "^1.18.2",
        "storybook-addon-versions": "^0.4.3",
        "stylelint": "^11.0.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-prettier": "^1.1.1",
        "stylelint-scss": "^3.10.0"
    }
}
